{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "rootDir": "./src/ts/",
    "outDir": "./src/dist/",
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
  }
}
