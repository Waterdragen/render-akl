{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "rootDir": "./src/ts/",
    "outDir": "./src/dist/",
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "node",
  },
}
